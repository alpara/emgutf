#!/bin/bash

cd "$(dirname "$0")"

mkdir -p /tmp/build_output

cd ../../..

docker run \
  -e USER="$(id -u)" \
  -u="$(id -u)" \
  -v $(pwd):/src/workspace \
  -v /tmp/build_output:/tmp/build_output \
  -v /etc/passwd:/etc/passwd \
  -w /src/workspace/tensorflow \
  emgu/bazel-android:dotnet-6.0-bazel-4.2.1 \
  bazel \
  --output_user_root=/tmp/build_output \
  build \
  --verbose_failures \
  --jobs=2 \
  //tensorflow/tfextern:libtfextern.so 

mkdir -p lib/x64
cp -f tensorflow/bazel-bin/tensorflow/tfextern/*.so lib/x64
cp -f tensorflow/bazel-bin/tensorflow/libtensorflow_framework.so lib/x64/libtensorflow_framework.so.2
