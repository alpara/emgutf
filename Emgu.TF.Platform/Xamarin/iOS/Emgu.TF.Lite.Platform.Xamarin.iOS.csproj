  <PropertyGroup>
    <TFLiteBinaryDir>$([System.IO.Path]::GetFullPath($(MSBuildThisFileDirectory)..\..\..\lib))</TFLiteBinaryDir>
    <EmguTFLiteDir>$(MSBuildThisFileDirectory)</EmguTFLiteDir>
